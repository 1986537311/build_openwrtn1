set nocompatible                    " use vim defaults
set showcmd                         " display incomplete commands
set showmatch                       " jump to matchs when entering parenthes
set matchtime=1                     " tenths of a secend to show the matching parenthes
set backspace=indent,eol,start      " make that backspace key work the way it should
set textwidth=0                     " don't wrap lines by default
set ruler                           " show the current row and column
set number                          " show line numbers

set nowrap                          " line exceed screen don't wrap
set sidescroll=1                    " line exceed screen cursor smooth scrolling
set cursorline                      " highlight cursorline
set laststatus=2                    " always show statusline

set novisualbell                    " turn off visualbell
set noerrorbells                    " turn off errorbell

set hlsearch                        " highlight searchs
set incsearch                       " do incremental searching
set ignorecase                      " ignore case when searching
set smartcase                       " no ignorecase if Uppercase char present

set autoindent                      " always set autoindenting on
set smartindent                     " indent works for c-like
set tabstop=4                       " <Tab> width look for
set expandtab                       " expand <Tab> as spaces
set softtabstop=4                   " spaces number when insert <Tab>
set shiftround                      " indent not to multiple of 'shiftwidth'
set shiftwidth=4                    " number of spaces to use for (auto)indent

set backupskip+=/etc/crontabs.*     " fix crontab -e
if filereadable(expand("$VIMRUNTIME/syntax/synload.vim"))
    syntax on                       " turn syntax highlight on by default
endif
if has("syntax") && &term =~ "xterm"
    set t_Co=8
    if has("terminfo")
        set t_Sf=<Esc>[3%p1%dm
        set t_Sb=<Esc>[4%p1%dm
    else
        set t_Sf=<Esc>[3%dm
        set t_Sb=<Esc>[4%dm
    endif
endif

" Remap move cursor
" nnoremap <C-H> ^
" nnoremap <C-L> $
" nnoremap <C-j> <C-d>
" nnoremap <C-k> <C-u>

" Specify file config
filetype plugin indent on
autocmd Filetype yaml set tabstop=2 shiftwidth=2 softtabstop=2

" Statusline configure
set statusline=%{&ff}:%<%f\ %h%m%r%w%=%4(%p%%%)\ %9(%l,%c%V%)\ 

" Theme
set t_Co=256
colorscheme yowish
autocmd Colorscheme yowish hi Normal ctermbg=none
autocmd Colorscheme yowish hi CursorLine ctermbg=none
autocmd Colorscheme yowish hi StatusLine cterm=bold ctermbg=66
autocmd Colorscheme yowish hi LineNr ctermfg=246
autocmd Colorscheme yowish hi SpecialKey ctermfg=242
autocmd Colorscheme yowish hi TabLineFill ctermbg=236
autocmd Colorscheme yowish hi TabLineSel ctermfg=236 ctermbg=249
" colorscheme desert
" autocmd Colorscheme desert hi LineNr ctermfg=246
" autocmd Colorscheme desert hi Comment ctermfg=241
