set showcmd
set showmatch
set nocompatible
set backspace=indent,eol,start
set textwidth=0
set ruler
set number

" Wrap config
set nowrap
set sidescroll=1

" Error bell
set novisualbell
set noerrorbells

" Search config
set hlsearch
set incsearch
set noignorecase
set smartcase

" Indent config
set autoindent
set smartindent
set autoindent
set tabstop=4
set shiftwidth=4
set expandtab
set softtabstop=4
set shiftround

set backupskip+=/etc/crontabs.*
if filereadable(expand("$VIMRUNTIME/syntax/synload.vim"))
    syntax on
endif
if has("syntax") && &term =~ "xterm"
    set t_Co=256
    if has("terminfo")
        set t_Sf=<Esc>[3%p1%dm
        set t_Sb=<Esc>[4%p1%dm
    else
        set t_Sf=<Esc>[3%dm
        set t_Sb=<Esc>[4%dm
    endif
endif

" Remap move cursor
nnoremap <C-H> ^
nnoremap <C-L> $
nnoremap <C-j> <C-d>
nnoremap <C-k> <C-u>

" Specify file config
filetype plugin indent on
autocmd Filetype yaml set tabstop=2 shiftwidth=2 softtabstop=2

" Theme
colorscheme desert
autocmd Colorscheme desert hi LineNr ctermfg=246 ctermbg=none
autocmd Colorscheme desert hi Comment ctermfg=241
